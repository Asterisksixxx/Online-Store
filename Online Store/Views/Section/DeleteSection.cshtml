@model Online_Store.ViewModels.DeleteSectionViewModel

@{
    ViewData["Title"] = "DeleteSection";
}

<h1>Удаление категории</h1>

<h4>Вы на самом деле хотите удалить категорию?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section.Name)
        </dd>
        <dt class = "col-sm-2">
           Количество подкатегорий
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section.SubsectionCount)
        </dd>
        <div class="form-group mt-4">
        <label class="control-label">Подкатегории</label>
        <select class="form-control" asp-items="ViewBag.SubSections">
            <option selected="selected" disabled="disabled">Показать подкатегории</option>
        </select>
        </div>
    </dl>
    <h5>Продукты потеряют привязку к категории</h5>
    <form asp-action="DeleteSection">
        <input type="hidden" asp-for="Section.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
