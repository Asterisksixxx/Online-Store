@model Online_Store.ViewModels.DeleteSectionViewModel

@{
    ViewData["Title"] = "DeleteSection";
}

<h1>DeleteSection</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SubSection</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Section.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Section.SubsectionCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section.SubsectionCount)
        </dd>
        <div class="form-group">
        <label class="control-label">Subsections</label>
        <select class="form-control" asp-items="ViewBag.SubSections">
            <option selected="selected" disabled="disabled">View SubSections</option>
        </select>
        </div>
    </dl>
    <h4> This product must be redirect to another list</h4>
    <form asp-action="DeleteSection">
        <input type="hidden" asp-for="Section.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
