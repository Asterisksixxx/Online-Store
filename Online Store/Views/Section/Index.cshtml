@model IEnumerable<Section>
        <div class="row pb-2">
    <div class="col ">Название категории</div>
    <div class="col ">Количество подкатегории</div>
            <div class="col ">
                <a class="btn btn-danger" asp-controller="Section" asp-action="Create">Добавить новую категорию</a>
                <form class="float-right" asp-controller="Section" asp-action="UpdateStatusSection" method="post">
                    <input class="btn badge-primary" type="submit" value="Обновить статус"/>
                </form>
            </div>
</div>
@foreach (var sec in Model)
{
    <div class="row pb-2">
        <div class="col ">@sec.Name</div>
        <div class="col ">@sec.SubsectionCount</div>
        <div class="col ">
            <a class="btn btn-info" asp-controller="Section" asp-route-id="@sec.Id" asp-action="UpdateSection">Редактировать</a>
            <a class="btn btn-info" asp-controller="Section" asp-route-id="@sec.Id" asp-action="DeleteSection">Удалить</a>
        </div>
    </div>
}

