@model Online_Store.ViewModels.EditUserViewModel
<div class="row text-lg-center">
    <h2 class="pr-2">@Model.Name</h2>
    <h2>@Model.Surname</h2>
</div>
<section class="d-flex justify-content-around">
    <div class="col-1">
        <div class="">Имя</div>
        <div class="">Фамилия</div>
        <div class="">Эл.почта</div>
        <div class="">Дата рождения</div>
        <div class="">Мобильный телефон</div>
    </div>
    <div class=" col-2 ">
        <label>@Model.Name</label>
        <label>@Model.Surname</label>
        <label>@Model.Email</label>
        <label>@Model.DataBorn.ToShortDateString()</label>
        <label>@Model.Number</label>
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
    </div>
</section>
<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Вернуться на главную</a>
</div>

