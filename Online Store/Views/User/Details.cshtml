@model Online_Store.ViewModels.EditUserViewModel
<div class="row">
    <h3 class="pr-2">@Model.Name</h3>
    <h3>@Model.Surname</h3>
</div>
<form asp-controller="User" asp-action="Details" method="post">
    <div class="row">
        <div class="pr-2">
            <div class="pb-2">Name</div>
            <div class="pb-2">Surname</div>
            <div class="pb-2">Email</div>
            <div class="pb-2">Data Born</div>
            <div class="pb-2">Edit Data Born</div>
            <div class="pb-2">Phone Number</div>
        </div>
        <div class="d-flex flex-column">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <input asp-for="Name" value="@Model.Name"/>
            <input asp-for="Surname" value="@Model.Surname"/>
            <input asp-for="Email" value="@Model.Email"/>
            <label>@Model.DataBorn.Year</label>
            <input type="date" class="form-control" asp-for="DataBorn.Year" value="@Model.DataBorn.Year"/>
            <input asp-for="Number" value="@Model.Number"/>
            <input type="submit" class="btn btn-danger" value="Edit"/>
            <button asp-controller="Home" asp-action="Index">Back to Home</button>
        </div>
    </div>
</form>