@model Online_Store.ViewModels.CreateSubSection

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SubSection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubSection.Name" class="control-label"></label>
                <input asp-for="SubSection.Name" class="form-control" />
                <span asp-validation-for="SubSection.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubSection.SectionId" class="control-label"></label>
                <select asp-for="SubSection.SectionId" class="form-control" asp-items="ViewBag.Sections">
                    <option selected="selected" disabled="disabled">Chose Section</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
