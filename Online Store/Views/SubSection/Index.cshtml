@model IEnumerable<SubSection>
<div class="row pb-2">
    <div class="col ">SubSection name</div>
    <div class="col ">Section Name</div>
    <div class="col ">Product Count</div>
    <div class="col ">
        <a class="btn btn-danger" asp-controller="SubSection" asp-action="Create">Create new</a>
        <form class="float-right" asp-controller="SubSection" asp-action="UpdateAllSubSection" method="post">
            <input class="btn badge-primary" type="submit" value="Update Status"/>
        </form>
    </div>
</div>
@foreach (var sec in Model)
{
    <div class="row pb-2">
        <div class="col ">@sec.Name</div>
        <div class="col ">@sec.Section.Name</div>
        <div class="col ">@sec.ProductCount</div>
        <div class="col ">
            <a class="btn btn-info" asp-controller="SubSection" asp-route-id="@sec.Id" asp-action="UpdateSubSection">Update</a>
            <a class="btn btn-info" asp-controller="SubSection" asp-route-id="@sec.Id" asp-action="DeleteSubSection">Delete</a>
        </div>
    </div>
}